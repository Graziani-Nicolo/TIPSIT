    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moving Image</title>
    <style>
        body {
            background-color: #fff;
            margin: 0;
            display: flex;
            height: 1920px;
            justify-content: flex-start;
            align-items: flex-start;
        }

        .container {
            background-color: #ccc;
            padding: 20px;
            text-align: center;
        }

        button {
            background-color: #002aff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin: 5px 5px;
            font-size: 16px;
            cursor: pointer;
        }
        #ball{
            width: 100px;
            height: 100px;
            position: relative;
        }
    </style>
</head>
<body>
    <div class="container">
        <button onclick="moveImage('up')">UP</button>
        <br>
        <button onclick="moveImage('left')">LEFT</button>
        <button onclick="moveImage('right')">RIGHT</button>
        <br>
        <button onclick="moveImage('down')">DOWN</button>
        <p>Timer</p>
        <p id="timer"></p>
    </div>
    <img id="ball" src="https://www.conquest.it/4566-large_default/pallone-volley-mikasa-mva330-a-norme-fivb.jpg">
    <script>
    	const movingImage = document.getElementById('ball');
        function moveImage(direction) {
            const step = 10;
            let currentLeft = parseInt(getComputedStyle(movingImage).left) || 0;
            let currentTop = parseInt(getComputedStyle(movingImage).top) || 0;
        
            switch (direction) {
                case 'up':
                    movingImage.style.top = `${currentTop - step}px`;
                    break;
                case 'down':
                    movingImage.style.top = `${currentTop + step}px`;
                    break;
                case 'left':
                    movingImage.style.left = `${currentLeft - step}px`;
                    break;
                case 'right':
                    movingImage.style.left = `${currentLeft + step}px`;
                    break;

            }
        }
        let cont=0;
        setInterval(timer, 100)
        function timer(){
            cont++;
            if(cont<61){
                document.getElementById("timer").innerHTML = cont;
            }
            if(cont>61){
                document.getElementById("timer").innerHTML = "STOP";
            }

        }
    </script>
</body>
</html>
